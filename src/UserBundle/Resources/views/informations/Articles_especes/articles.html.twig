           {{ a.contenu|raw }}

            <span class="pl-5 article-details float-center"> {{ a.datepub ? a.datepub|date}}</span>

            <img style="width: 400px;height: 350px;" src="{{ asset('') }}{{ vich_uploader_asset(a, 'imageFile') }} ">
