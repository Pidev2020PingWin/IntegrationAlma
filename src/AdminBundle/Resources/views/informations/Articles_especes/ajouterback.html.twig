{% extends "@Admin/Default/back.html.twig" %}
{%block body%}
    <h1>Gestion des Articles</h1>
    <br>
    <br>
    <br>
    <br>
        <div class="form-group">
            {{ form_start(form) }}
            <label for="exampleInputEmail1">Titre</label>
            {{ form_widget(form.titre)}}
            <small id="emailHelp" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Contenu</label>
            {{ form_errors(form.contenu)}}
            {{ form_widget(form.contenu,{'attr':{'class':'input-form','placeholder':'Contenu'}})}}
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">image</label>
            {{ form_widget(form.imageFile, {'attr': {'novalidate': 'novalidate'}}) }}
        </div>
        <div class="form-check">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>


        {{ form_end(form) }}

{%endblock%}